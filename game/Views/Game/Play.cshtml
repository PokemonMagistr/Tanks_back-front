                var arr = JSON.parse(data);

                for (let i = 0; i < arr.length; i++) {
                    if (arr[i].Type == "hero" && arr[i].UserId == userId)
                    {
                        hero = arr[i];
                        console.log(1);
                    }

                    myRender(arr[i]);
                }
                objects = arr; // objects - объекты на клиенте arr - объекты на сервере

            });
            var playInterval = setInterval(play, 60);
        });
